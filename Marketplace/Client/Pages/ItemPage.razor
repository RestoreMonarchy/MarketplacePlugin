@page "/items/{itemId}"

@if (Item != null)
{
    <div class="row justify-content-center">
        <div class="col-lg-5 text-center">
            <img class="card-img-top" src="/api/unturneditems/@ItemId/icon" style="max-width: 400px;">
            <h2 class="font-weight-bold">@Item.ItemName</h2>
            <p>@Item.ItemDescription</p>
        </div>
        <div class="col-lg-7">
            <ul class="list-group">
                @foreach (var market in Item.MarketItems.OrderBy(x => x.Price))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Item.ItemName <b>$@market.Price</b>
                        <button type="button" class="btn btn-primary" @onclick="() => PreviewListing(market)">
                            More Info
                        </button>
                    </li>
                }
            </ul>
            @if (Item.MarketItems.Count == 0)
            {
                <h3 class="text-center">No listings</h3>
            }
        </div>
    </div>

    <ItemInfoModal Item="Item" Listing="listing" OnClickBuy="BuyListing" />
}
